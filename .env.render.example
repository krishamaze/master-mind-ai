# Example environment variables for deploying Master Mind AI on Render
# Copy values into the Render dashboard for production deployment.

DEBUG=False
SECRET_KEY=replace-me
ALLOWED_HOSTS=.onrender.com

# Render provides DATABASE_URL automatically, but include for reference
DATABASE_URL=postgresql://user:password@host:5432/mastermind

# API keys
MEM0_API_KEY=your-mem0-api-key

# CORS configuration for frontend
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com

# Optional Mem0 settings
MEM0_API_BASE_URL=https://api.mem0.ai
MEM0_PROVIDER=supabase
MEM0_EMBEDDING_DIM=1536
MEM0_INDEX_METHOD=hnsw

ENVIRONMENT=production
