# Environment variables for Master Mind AI
# Copy this file to .env and update values for your environment.

# Django Settings
DEBUG=True  # Set to False in production
SECRET_KEY=change-me  # Replace with a secure key
ALLOWED_HOSTS=localhost,127.0.0.1  # Comma-separated list of allowed hosts

# PostgreSQL Database
# Optionally use a single DATABASE_URL instead of individual settings
# DATABASE_URL=postgresql://user:password@localhost:5432/mastermind_db
POSTGRES_DB=mastermind_db  # Database name
POSTGRES_USER=mastermind_user  # Database user
POSTGRES_PASSWORD=mastermind_pass  # Database password
POSTGRES_HOST=localhost  # Database host
POSTGRES_PORT=5432  # Database port

# Supabase configuration
SUPABASE_DB_URL=postgresql://user:password@db.supabase.co:5432/postgres  # Supabase connection string
SUPABASE_URL=https://your-project.supabase.co  # Supabase project URL
SUPABASE_ANON_KEY=your-anon-key  # Supabase anon key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Supabase service role key

# Mem0.ai API
MEM0_API_KEY=your-mem0-api-key  # API key for Mem0.ai
MEM0_API_BASE_URL=https://api.mem0.ai  # Base URL for Mem0.ai API
MEM0_PROVIDER=supabase  # Memory storage provider
MEM0_EMBEDDING_DIM=1536  # Embedding dimension for vector store
MEM0_INDEX_METHOD=hnsw  # Index method for vector search

# CORS Settings for Browser Extension
CORS_ALLOWED_ORIGINS=chrome-extension://<extension-id>  # Extension origin allowed to access the API

# Environment Flags
ENVIRONMENT=development  # Set to 'production' in production

# Optional Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Email backend
EMAIL_HOST=smtp.example.com  # SMTP server
EMAIL_PORT=587  # SMTP port
EMAIL_HOST_USER=user@example.com  # SMTP username
EMAIL_HOST_PASSWORD=password  # SMTP password
EMAIL_USE_TLS=True  # Use TLS for email

# Security Tokens and API Keys
API_TOKEN=replace-with-token  # Generic API token placeholder

